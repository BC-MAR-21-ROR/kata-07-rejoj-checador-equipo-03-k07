<div class="row flex-column justify-content-center align-items-center">

  <div class="col-10 my-1">
    <h3 class="text-center">Employees</h3>
  </div>
  
  <div class="col-10">
    <hr class="bg-dark border-1">
    <table class="table table-striped">
      <thead class="table-dark">
        <tr>
          <th scope="col">Email</th>
          <th scope="col">Name</th>
          <th scope="col">Position</th>
          <th scope="col">Employee number</th>
          <th scope="col">Private number</th>
          <th scope="col">Company Branch</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @employees.each do |employee| %>
          <tr>
            <td><%= employee.email %></td>
            <td><%= employee.name %></td>
            <td><%= employee.position %></td>
            <td><%= employee.employee_number %></td>
            <td><%= employee.private_number %></td>
            <td><%= employee.company_branch_id %></td>
            <td><%= link_to 'Show', company_branch_employee_path(@company_branch, employee), class: "btn btn-outline-secondary" %></td>
            <td><%= link_to 'Edit', edit_company_branch_employee_path(@company_branch, employee), method: :get, class: "btn btn-outline-primary" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="col-10 d-flex justify-content-end">
      <%= link_to 'New Employee', new_company_branch_employee_path(@company_branch), class:"btn btn-primary col-2" %>
      <%= link_to 'Back', company_branches_path, class:"btn btn-outline-dark col-1 mx-2" %>
  </div>
</div>
