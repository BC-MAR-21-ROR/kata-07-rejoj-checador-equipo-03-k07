<%= render partial: "layouts/navbar"%>
<div class="col-lg-10">
  <h3 class="text-center my-3">Company branches</h3>
  <div class="table-responsive">
    <table class="table table-hover table-sm">
      <thead class="table-dark">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col">Address</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @company_branches.each do |branch| %>
          <tr>
            <th scope="row"><%= branch.id %></th>
            <td><%= branch.name %></td>
            <td><%= branch.address %></td>
            <td>
              <%= link_to company_branch_employees_path(branch), title: "show" , "data-bs-toggle" => :tooltip do %>
                <i class="bi bi-eye"></i>
              <%end%>
            </td>
            <td>
              <%= link_to edit_company_branch_path(branch), title: "edit" , "data-bs-toggle" => :tooltip do %>
                <i class="bi bi-pencil"></i>
              <%end%>
            </td>
            <td>
              <%= link_to company_branch_path(branch), title: "trash" , "data-bs-toggle" => :tooltip,
                method: :delete, data: { confirm: 'Are you sure?' } do %>
                <i class="bi bi-trash"></i>
              <%end%>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="d-flex justify-content-center">
      <%== pagy_bootstrap_nav(@pagy) %>
    </div>
  </div>
  <div class="col-lg-12 d-flex justify-content-end">
    <%= link_to 'New branch', new_company_branch_path, class: 'btn btn-primary' %>
  </div>
</div>
