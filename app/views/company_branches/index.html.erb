<%- content_for :navbar do %>
  <nav class="navbar navbar-light bg-light fixed-top">
    <div class="container-fluid">
      <span class="mb-0"><h1 class="navbar-brand">Admin</h1></span>
      <%= link_to "Sign out â†’", destroy_admin_session_path, class: "btn btn-outline-danger", method: :delete %>
    </div>
  </nav>
<% end %>

<div class="col-lg-10 pt-5">
  <h3 class="text-center my-3">Company branches</h3>
  <div class="table-responsive">
    <table class="table table-striped">
      <thead class="table-dark">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col">Address</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @company_branches.each do |branch| %>
          <tr>
            <th scope="row"><%= branch.id %></th>
            <td><%= branch.name %></td>
            <td><%= branch.address %></td>
            <td><%= link_to 'Show', company_branch_employees_path(branch),
              class: "btn btn-outline-secondary" %>
            </td>
            <td><%= link_to 'Edit', edit_company_branch_path(branch),
              class: "btn btn-outline-primary" %>
            </td>
            <td><%= link_to 'Remove', company_branch_path(branch),
              method: :delete, data: { confirm: 'Are you sure?' },
              class: "btn btn-outline-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-lg-12 d-flex justify-content-end">
    <%= link_to 'New branch', new_company_branch_path, class: 'btn btn-primary' %>
  </div>
</div>
