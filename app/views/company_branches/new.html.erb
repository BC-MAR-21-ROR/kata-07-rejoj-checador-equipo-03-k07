<h1>New branch</h1>

<%= form_with model: CompanyBranch, url: company_branches_path do |form| %>
  <div class="mb-3">
    <%= form.label :name%>
    <%= form.text_field :name, class: "form-control"%>
  </div>
  <div class="mb-3">
    <%= form.label :address%>
    <%= form.text_field :address, class: "form-control"%>
  </div>
  <div class="mb-3">
    <%= form.submit "Add company", class: "btn btn-primary" %>
    <%= link_to "Back", company_branches_path , method: :get, class: "btn btn-primary" %>
  </div>
<% end %>
