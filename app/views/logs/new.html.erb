<div class="col-lg-12 d-flex justify-content-center text-center align-items-center bg-dark mb-4">
  <div class="row">
    <div class="col-12 my-4">
      <h1 class="text-white">Check In/Out</h1>
      <hr class="bg-warning">
    </div>

    <div class="col-12">
      <h2 class="text-white">Date and time of TODAY:</h2>
      <h4 class="text-white"><span id="date"><%=Date.today.inspect%></span></h4>
      <h4 class="text-white"><span id="clock"><%=Time.now.strftime '%T'%></span></h4>
      <%= bootstrap_form_tag(url: logs_path) do %>
      <p class="text-white mt-5">Private Number</p>
        <%= text_field_tag :private_number, {}, class:"col-lg-6 mb-4" %>
        <div class="actions d-flex justify-content-center mx-4">
          <%= submit_tag @log_type, class:"col-lg-3 btn btn-primary my-5" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= javascript_pack_tag 'clock' %>
